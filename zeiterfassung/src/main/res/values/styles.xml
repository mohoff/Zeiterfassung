<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Both <v21 and v21 inherit from AppTheme.Base -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/navigation_drawer_list_selector</item>

        <!--<item name="actionBarStyle">@style/MyActionBarStyle</item>-->

        <item name="colorPrimary">@color/greenish</item>
        <item name="colorPrimaryDark">@color/greenish</item>
        <item name="colorAccent">@color/greenish</item>
        <!-- You can also setIsRunning colorControlNormal, colorControlActivated
             colorControlHighlight & colorSwitchThumbNormal. -->

        <item name="colorButtonNormal">@color/greenish</item>
        <item name="colorControlNormal">@color/greenish</item>
        <item name="colorControlActivated">@color/greenish</item>
        <item name="android:imageButtonStyle">@color/transparent</item> <!-- in order to make ImageButton background transparent -->

        <!--<item name="android:windowActionBar">false</item>--> <!-- not needed anymore, because we inherit from NoActionBar -->
        <item name="alertDialogTheme">@style/AlertDialog</item>


    </style>

    <style name="Button" parent="android:style/Widget.Material.Button">
        <item name="colorButtonNormal">@color/greenish</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageButton" parent="android:style/Widget.Material.ImageButton">
        <item name="android:tint">@color/greenish</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Button.ServiceControl">
        <!-- duplicate of "Button". In case buttons need more diversification in the future -->
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.ServiceControl.Start">
    </style>
    <style name="Button.ServiceControl.Stop">
    </style>

    <style name="LoadingSpinner" parent="android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

    <style name="EditText">
        <item name="colorControlNormal">#0000FF</item>
        <item name="colorControlActivated">#00FF00</item>
        <item name="colorControlHighlight">#FF0000</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/greenish</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!--<item name="android:background">#FFFFFFFF</item>-->
    </style>

</resources>
