<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.mohoff.zeiterfassung.activities.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zur Map"
            android:id="@+id/button"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="40dp" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="neue TargetLocationArea anlegen"
            android:id="@+id/buttonTLA"
            android:layout_below="@+id/button" android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stop LocationService"
            android:id="@+id/buttonStopService"
            android:layout_below="@+id/buttonTLA" android:layout_alignLeft="@+id/buttonTLA"
            android:layout_alignStart="@+id/buttonTLA"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="manage TLAs"
            android:id="@+id/buttonManageTLA" android:layout_below="@+id/buttonStopService"
            android:layout_alignLeft="@+id/buttonStopService" android:layout_alignStart="@+id/buttonStopService"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausgabe:"
            android:id="@+id/activityName"
            android:layout_below="@+id/buttonManageTLA" android:layout_alignLeft="@+id/buttonManageTLA"
            android:layout_alignStart="@+id/buttonManageTLA"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@+id/activityName" android:layout_alignLeft="@+id/activityName"
            android:layout_alignStart="@+id/activityName"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"/>

</RelativeLayout>
