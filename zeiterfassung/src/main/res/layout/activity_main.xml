<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.mohoff.zeiterfassung.activities.MainActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zur Map"
            android:id="@+id/button"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="40dp" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="neue TargetLocationArea anlegen"
            android:id="@+id/buttonTLA"
            android:layout_below="@+id/button" android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausgabe:"
            android:id="@+id/textView"
            android:layout_below="@+id/buttonTLA" android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" android:layout_marginTop="31dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/textView" android:layout_alignLeft="@+id/button"/>


</RelativeLayout>
