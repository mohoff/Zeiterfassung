<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/card_view_inner"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/grey_05"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingTop="-3dp"
    card_view:contentPaddingBottom="-3dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:id="@+id/locationWrapper">

        <!-- location name -->
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationName"
            android:inputType="textNoSuggestions"
            android:text="allmandring 26d"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginRight="75dp"
            android:maxLength="100"/>

        <!-- repin button -->
        <ImageButton
            style="@style/ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repinLocationButton"
            android:src="@drawable/ic_location_on_black_24dp"
            android:layout_toLeftOf="@+id/deleteLocationButton"
            android:layout_centerVertical="true"/>

        <!-- delete button -->
        <ImageButton
            style="@style/ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteLocationButton"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
