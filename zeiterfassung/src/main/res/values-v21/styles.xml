<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- better inherit "AppTheme", my <APILVL21 theme ? -->
    <!-- better inherit "android:Theme.Material", my <APILVL21 theme ? -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!--<item name="android:colorButtonNormal">@color/greenish</item>-->

        <!-- ActionBar Background Color -->
        <item name="android:colorPrimary">@color/greenish</item>
        <!-- StatusBar Background Color, usually darker variant of ActionBar Background Color -->
        <item name="android:colorPrimaryDark">@color/greenish</item>
        <!-- UI Controls Collors (TextView, EdditView, Slider, Checkboxes -->
        <item name="android:colorAccent">@color/greenish</item>
        <!-- e.g. for EditText bottom underline color -->
        <!-- Apparently, colorAccent does it too e eramor mo -->
        <!--<item name="android:colorControlNormal">@color/greenish</item>-->
        <!-- StatusBar Title Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- MainContent Background Color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Softkey Background Color -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:colorButtonNormal">@color/greenish</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <!--
    <style name="Button">
        <item name="android:colorButtonNormal">@color/greenish</item>
    </style>
    -->

    <style name="ImageButton" parent="android:style/Widget.Material.ImageButton">
        <item name="android:tint">@color/greenish</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="LoadingSpinner" parent="android:style/Widget.Material.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/greenish</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

</resources>