<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.mohoff.zeiterfassung" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permission to receive Google Maps -->
    <uses-permission android:name="com.arshad.map.permission.MAPS_RECEIVE" />
    <!-- Permission to read Google Services -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Zeiterfassung"
        android:theme="@style/AppTheme.Base" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBhGC3B6R8sodII0rrWPx1FJclOr4f4FM0" />

        <activity
            android:name=".ui.MainActivity"
            android:label="Zeiterfassung" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity
            android:name=".activities.Map"
            android:label="@string/title_activity_map" >
        </activity>-->
        <activity
            android:name=".legacy.AddTargetLocationArea"
            android:label="@string/title_activity_add_tla" >
        </activity>

        <!--
        <service
            android:name=".LocationService"
            android:exported="false" >
        </service>-->
        <service
            android:name=".locationservice.LocationServiceNewAPI"
            android:exported="false" >
        </service>

        <activity
            android:name=".legacy.ManageTLA"
            android:label="@string/title_activity_manage_tl"
            android:parentActivityName=".ui.MainActivity"
            android:windowSoftInputMode="adjustPan"><!-- listView- vs editView-focus workaround -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity" />
        </activity>
        <activity
            android:name=".legacy.ManageTLADetail"
            android:label="@string/title_activity_manage_tladetail" >
        </activity>
    </application>

</manifest>
